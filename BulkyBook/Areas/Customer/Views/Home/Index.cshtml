@model IEnumerable<BulkyBook.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-12 col-sm-6 col-md-4 col-lg-3">
            <div class="card">
                @{
                    var base64 = Convert.ToBase64String(product.ImageUrl);
                    var pic = String.Format($"data:image/jpg;base64,{base64}");
                }
                <img src="@pic" class="card-img-top rounded mx-auto d-block my-2" style="height:200px;width:200px" alt="Product Picture">
                <div class="mx-3">
                    <p class="card-title"><b style="color:#2c3e50">@product.Title.ToUpper()</b></p>
                    <p class="card-title text-primary">by <b>@product.Author</b></p>
                    <p>List Price: <strike><b class="">$@product.ListPrice.ToString("0.00")</b></strike></p>
                    <p style="color:maroon">As low as: <b class="">$@product.Price100.ToString("0.00")</b></p>

                </div>
                <div>
                    <a asp-action="Details" class="btn btn-primary form-control" asp-route-id="@product.Id">Details</a>
                </div>
            </div>
        </div>
    }
</div>
